<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserTypeActivity">

    <ImageView
        android:id="@+id/imageView_Parent"
        android:layout_width="1000dp"
        android:layout_height="400dp"
        app:srcCompat="@drawable/areyouaparent"
        android:scaleType="fitXY"
        android:adjustViewBounds="false"
        android:clickable="true"/>

    <ImageView
        android:id="@+id/imageView_Student"
        android:layout_width="1000dp"
        android:layout_height="400dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/areyouastudent"
        android:layout_below="@+id/imageView_Parent"
        android:scaleType="fitXY"
        android:adjustViewBounds="false"
        android:clickable="true"/>

</RelativeLayout>